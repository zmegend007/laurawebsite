{% style %}
  {% if settings.type_heading_font %}
    {{ settings.type_heading_font | font_face: font_display: 'swap' }}
    {{ settings.type_heading_font | font_modify: 'weight', '300' | font_face: font_display: 'swap' }}
    {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {% endif %}

  {% if settings.type_body_font %}
    {{ settings.type_body_font | font_face: font_display: 'swap' }}
    {{ settings.type_body_font | font_modify: 'weight', '300' | font_face: font_display: 'swap' }}
    {{ settings.type_body_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {% endif %}

  :root {
    {% if settings.type_heading_font %}
      --font-heading: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    {% else %}
      --font-heading: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    {% endif %}

    {% if settings.type_body_font %}
      --font-body: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    {% else %}
      --font-body: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    {% endif %}

    --font-heading-weight: 300;
    --font-body-weight: 300;

    --color-bg: {{ settings.color_background | default: '#FFFFFF' }};
    --color-bg-alt: {{ settings.color_background_alt | default: '#F5F5F5' }};
    --color-fg: {{ settings.color_foreground | default: '#000000' }};
    --color-fg-muted: {{ settings.color_foreground_muted | default: '#717171' }};
    --color-accent: {{ settings.color_accent | default: '#A68A6E' }};
    --color-border: {{ settings.color_border | default: '#E5E5E5' }};

    --page-width: {{ settings.max_page_width | default: '90rem' }};
    --page-margin: {{ settings.min_page_margin | default: 24 }}px;

    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 2rem;
    --space-lg: 4rem;
    --space-xl: 6rem;
    --space-2xl: 10rem;

    --text-xs: 0.75rem;
    --text-sm: 0.875rem;
    --text-base: 1rem;
    --text-lg: 1.125rem;
    --text-xl: 1.5rem;
    --text-2xl: 2rem;
    --text-3xl: 3rem;
    --text-display: clamp(3rem, 8vw, 7rem);

    --transition-base: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 0.6s cubic-bezier(0.4, 0, 0.2, 1);

    --z-header: 100;
    --z-overlay: 200;
    --z-modal: 300;
    --z-whatsapp: 400;
  }
{% endstyle %}
