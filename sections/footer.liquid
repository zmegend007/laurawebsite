<footer class="footer section-padding">
  <div class="footer__inner">
    <div class="footer__brand">
      <p class="footer__logo">{{ section.settings.logo_text | default: shop.name }}</p>
      <p class="footer__tagline text-muted">{{ section.settings.tagline }}</p>
    </div>

    <div class="footer__links">
      {% if section.settings.menu != blank %}
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
        {% endfor %}
      {% endif %}
    </div>

    <div class="footer__social">
      {% if settings.social_instagram != blank %}
        <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" class="footer__social-link">Instagram</a>
      {% endif %}
      {% if settings.social_tiktok != blank %}
        <a href="{{ settings.social_tiktok }}" target="_blank" rel="noopener" class="footer__social-link">TikTok</a>
      {% endif %}
      {% if settings.social_linkedin != blank %}
        <a href="{{ settings.social_linkedin }}" target="_blank" rel="noopener" class="footer__social-link">LinkedIn</a>
      {% endif %}
      {% if settings.social_youtube != blank %}
        <a href="{{ settings.social_youtube }}" target="_blank" rel="noopener" class="footer__social-link">YouTube</a>
      {% endif %}
    </div>
  </div>

  <div class="footer__bottom">
    <p class="text-muted">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Alle Rechte vorbehalten.</p>
    {% if section.settings.show_payment_icons %}
      <div class="footer__payment">
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</footer>

{% stylesheet %}
  .footer {
    border-top: 1px solid var(--color-border);
  }

  .footer__inner {
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: var(--space-lg);
    align-items: start;
  }

  .footer__logo {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .footer__tagline {
    margin-top: var(--space-xs);
    font-size: var(--text-sm);
  }

  .footer__links {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .footer__link {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    transition: color var(--transition-base);
  }
  .footer__link:hover { color: var(--color-fg); }

  .footer__social {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .footer__social-link {
    font-size: var(--text-xs);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-fg-muted);
    transition: color var(--transition-base);
  }
  .footer__social-link:hover { color: var(--color-fg); }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-lg);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-xs);
  }

  .footer__payment {
    display: flex;
    gap: var(--space-xs);
  }
  .footer__payment svg { width: 38px; height: 24px; }

  @media (max-width: 749px) {
    .footer__inner {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    .footer__social { flex-direction: row; gap: var(--space-sm); }
    .footer__bottom {
      flex-direction: column;
      gap: var(--space-sm);
      text-align: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Fußzeile",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo-Text",
      "default": "Laura Messerschmitt"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Untertitel",
      "default": "Fashion Stylist — Berlin"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Zahlungsarten anzeigen",
      "default": true
    }
  ]
}
{% endschema %}
