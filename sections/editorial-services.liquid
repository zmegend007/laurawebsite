{%- style -%}
  .editorial-services {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }

  .editorial-services__header {
    text-align: center;
    max-width: 64rem;
    margin: 0 auto 7rem;
    padding: 0 2rem;
  }

  .editorial-services__label {
    font-size: 0.95rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    opacity: 0.35;
    margin-bottom: 1.8rem;
    font-weight: 500;
  }

  .editorial-services__title {
    font-family: var(--font-heading-family);
    font-size: clamp(3rem, 5vw, 5.6rem);
    letter-spacing: 0.1em;
    font-weight: 200;
    margin: 0;
    line-height: 1;
    text-transform: uppercase;
  }

  .editorial-services__grid {
    display: grid;
    grid-template-columns: 1fr;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 2rem;
    counter-reset: service-counter;
  }

  @media screen and (min-width: 750px) {
    .editorial-services__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .editorial-services__item {
    padding: 4rem 3rem;
    position: relative;
    counter-increment: service-counter;
    transition: background-color 0.4s ease;
  }

  .editorial-services__item:hover {
    background-color: rgba(var(--color-foreground), 0.015);
  }

  @media screen and (min-width: 750px) {
    .editorial-services__item {
      padding: 4.5rem;
    }

    .editorial-services__item:not(:last-child) {
      border-right: 1px solid rgba(var(--color-foreground), 0.05);
    }
  }

  @media screen and (max-width: 749px) {
    .editorial-services__item:not(:last-child) {
      border-bottom: 1px solid rgba(var(--color-foreground), 0.05);
    }
  }

  .editorial-services__number {
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    opacity: 0.25;
    margin-bottom: 2.4rem;
    font-weight: 500;
  }

  .editorial-services__item-title {
    font-family: var(--font-heading-family);
    font-size: clamp(1.8rem, 2.4vw, 2.6rem);
    letter-spacing: 0.06em;
    font-weight: 300;
    margin: 0 0 1.8rem;
    line-height: 1.15;
  }

  .editorial-services__item-text {
    font-size: 1.35rem;
    line-height: 1.8;
    opacity: 0.45;
    margin: 0 0 2.4rem;
  }

  .editorial-services__link {
    font-size: 0.95rem;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    padding-bottom: 2px;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.15);
  }

  .editorial-services__link:hover {
    opacity: 1;
    border-bottom-color: rgb(var(--color-foreground));
  }

  .editorial-services__link-arrow {
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    font-size: 1.3rem;
    display: inline-block;
  }

  .editorial-services__link:hover .editorial-services__link-arrow {
    transform: translateX(6px);
  }
{%- endstyle -%}

<section class="editorial-services color-{{ section.settings.color_scheme }}">
  <div class="editorial-services__header bm-reveal">
    {% if section.settings.label != blank %}
      <p class="editorial-services__label">{{ section.settings.label }}</p>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="editorial-services__title">{{ section.settings.heading }}</h2>
    {% endif %}
  </div>

  <div class="editorial-services__grid bm-stagger">
    {% for block in section.blocks %}
      <div class="editorial-services__item bm-reveal" {{ block.shopify_attributes }}>
        <p class="editorial-services__number">0{{ forloop.index }}</p>
        {% if block.settings.title != blank %}
          <h3 class="editorial-services__item-title">{{ block.settings.title }}</h3>
        {% endif %}
        {% if block.settings.text != blank %}
          <p class="editorial-services__item-text">{{ block.settings.text }}</p>
        {% endif %}
        {% if block.settings.link_label != blank %}
          <a href="{{ block.settings.link }}" class="editorial-services__link">
            {{ block.settings.link_label }}
            <span class="editorial-services__link-arrow">&rarr;</span>
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Editorial Services",
  "tag": "section",
  "class": "section-editorial-services",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Section label",
      "default": "What I Do"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Services"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "scheme-1", "label": "Scheme 1" },
        { "value": "scheme-2", "label": "Scheme 2" },
        { "value": "scheme-3", "label": "Scheme 3" },
        { "value": "scheme-4", "label": "Scheme 4" },
        { "value": "scheme-5", "label": "Scheme 5" }
      ],
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 80,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Service Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Describe this service offering."
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Services",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "title": "Personal Styling",
            "text": "One-on-one consultations tailored to your aesthetic, body, and lifestyle. From wardrobe edits to complete transformations.",
            "link_label": "Learn More"
          }
        },
        {
          "type": "service",
          "settings": {
            "title": "Designer Rental",
            "text": "Access luxury pieces for your next event. Curated, maintained, delivered to your door in Berlin and across Germany.",
            "link_label": "Browse Collection"
          }
        },
        {
          "type": "service",
          "settings": {
            "title": "Event Styling",
            "text": "Red carpet, editorial, and production styling. From concept to final look, every detail considered.",
            "link_label": "Get in Touch"
          }
        }
      ]
    }
  ]
}
{% endschema %}
