<section class="about section-padding">
  <div class="about__inner">
    {% if section.settings.image != blank %}
      <div class="about__image-wrap">
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading | default: 'Laura Messerschmitt' }}"
          loading="lazy"
          class="about__image"
        >
      </div>
    {% endif %}

    <div class="about__content">
      {% if section.settings.heading != blank %}
        <h1 class="about__heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.body != blank %}
        <div class="about__body">{{ section.settings.body }}</div>
      {% endif %}

      {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
        <a href="{{ section.settings.cta_url }}" class="btn btn--outline about__cta">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .about__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    align-items: center;
  }

  .about__image-wrap {
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  .about__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .about__heading {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-md);
  }

  .about__body {
    font-size: var(--text-base);
    line-height: 1.8;
    color: var(--color-fg-muted);
  }

  .about__body p + p {
    margin-top: var(--space-sm);
  }

  .about__cta {
    margin-top: var(--space-lg);
  }

  @media (max-width: 749px) {
    .about__inner {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Laura"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>Berlin-based fashion stylist with an eye for detail and a passion for individual looks.</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Get in Touch"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "About",
      "category": "About"
    }
  ]
}
{% endschema %}
