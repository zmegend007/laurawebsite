      "info": "Upload video under Settings > Files and paste URL here"
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Fallback image / Poster"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
