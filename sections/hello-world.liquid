<section class="hero full-width">
  {% if section.settings.video_url != blank %}
    <video
      class="hero__video"
      autoplay
      muted
      loop
      playsinline
      preload="auto"
      {% if section.settings.poster_image != blank %}
        poster="{{ section.settings.poster_image | image_url: width: 1920 }}"
      {% endif %}
    >
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  {% elsif section.settings.poster_image != blank %}
    <img
      class="hero__poster"
      src="{{ section.settings.poster_image | image_url: width: 1920 }}"
      alt="{{ section.settings.heading }}"
      loading="eager"
    >
  {% endif %}

  <div class="hero__overlay"></div>

  <div class="hero__content">
    {% if section.settings.heading != blank %}
      <h1 class="hero__heading">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="hero__subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
      <a href="{{ section.settings.cta_url }}" class="btn btn--white hero__cta">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100svh;
    background-color: #000;
    color: #fff;
    overflow: hidden;
  }

  .hero__video,
  .hero__poster {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
  }

  .hero__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-md);
  }

  .hero__heading {
    font-family: var(--font-heading);
    font-size: var(--text-display);
    font-weight: 300;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    line-height: 1.05;
    color: #fff;
  }

  .hero__subheading {
    font-family: var(--font-body);
    font-size: clamp(0.875rem, 2vw, 1.25rem);
    font-weight: 300;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    margin-top: var(--space-sm);
    color: rgba(255, 255, 255, 0.6);
  }

  .hero__cta {
    margin-top: var(--space-md);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Laura Messerschmitt"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
